{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "package.json",
        "package-lock.json"
      ],
      "message": "[skip ci] chore: publish",
      "yes": true
    },
    "run": {
      "stream": true
    }
  },
  "packages": [
    "clients/*",
    "servers/*",
    "shared/*"
  ],
  "version": "independent"
}
