{
  "tasks": {
    "bootstrap": [
      "lerna bootstrap"
    ],
    "build": [
      "[bootstrap]",
      "[source:clean]",
      "[source:format]",
      "[source:lint]",
      "lerna run build"
    ],
    "source:clean": [
      "rimraf clients/*/bin",
      "rimraf servers/*/bin",
      "rimraf shared/*/lib",
      "rimraf **/*.tsbuildinfo"
    ],
    "source:format": [
      "prettier --loglevel silent --write \"servers/*/src/**/*.ts\""
    ],
    "source:lint": [
      "tslint --project tsconfig.json --config tslint.json"
    ]
  }
}
